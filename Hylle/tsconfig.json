{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.ts",    // Include TypeScript files in the 'src' directory
    "src/**/*.tsx",   // Include TypeScript and JSX files in the 'src' directory
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
